			var responseBody {{unref .ResponseType}}
			err = res.ReadAndUnmarshalBody(&responseBody)
			if err != nil {
				return nil, respHeaders, err
			}

			return &responseBody, respHeaders, nil
		{{range $idx, $exception := .Exceptions}}
